{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    // "jsx": "preserve",
    // "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    // "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    // "types": [
    //   "webpack-env"
    // ],
    // "paths": {
    //   "@/*": [
    //     "src/*"
    //   ]
    // },
    "lib": [
      "es2019",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    // "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    // "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}